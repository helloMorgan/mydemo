.prompt_box {
    width: 13rem;
    height: 5.5rem;
    position: absolute;
    z-index: 2;
    color: Red;
    background-color: White;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
    margin: auto;
    border-radius: .4rem;
    padding-top: 1rem;
    padding-bottom: 0.5rem;

}

.prompt_box>p {
    font-size: .7rem;
    height: 1.5rem;
    color: #606666;
    line-height:1.5rem;
    text-align: center;
}
