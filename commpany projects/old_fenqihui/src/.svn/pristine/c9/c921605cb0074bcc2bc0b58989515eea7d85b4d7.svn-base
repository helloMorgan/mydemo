body {
    background-color: rgb(244, 245, 246);
}

.order_detail_container {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    flex-wrap: wrap;
    font-size: 1rem;
    color: rgb(18, 18, 19);
    width: 86%;
    padding: 1rem 2%;
    margin-left: 5%;
    background-color: #fff;
}

.order_detail_container+.order_detail_container {
    margin-top: 1rem;
    padding: 0.5rem 2%;
}

.order_detail_banner {
    width: 90%;
    margin-left: 5%;
}

.order_detail_container>hr {
    border: none;
    border-bottom: 1px solid rgb(244, 244, 244);
}

.order_detail_container ul {
    display: flex;
    display: -webkit-flex;
    flex-wrap: wrap;
    font-size: 0.8rem;
    color: rgb(128, 129, 130);
    width: 100%;
}

.order_detail_container ul li {
    flex-basis: 100%;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    line-height: 2rem;
    background: url('../../bitmap/account/circle.jpg') 0.5rem no-repeat;
    background-size: 0.3rem 0.3rem;
    text-indent: 1.1rem;
}

.order_detail_container ul li span:first-child {
    align-items: flex-start;
}

.order_detail_container ul li span:last-child {
    align-items: flex-end;
    margin-right: 1rem;

}