body {
    background: #f4f4f4;
    width: 100%;
}

.order_content {
    padding: .75rem;
    padding-right: 0;
    background: #FFF;
    width: 100%;
    box-sizing:border-box;
    -moz-box-sizing:border-box; /* Firefox */
    -webkit-box-sizing:border-box; /* Safari */

}

.order_content>li>label {
    font-size: .8rem;
    color: #999;
    display: inline-block;
    width: 6.5rem;
}

.order_content>li>span {
    display: inline-block;
    width: 10.25rem;
    font-size: .9rem;
    color: #fec229;
    text-align: right;
    font-weight: 500;
}

.order_content>li:first-child>span{
    width: 13rem;
    text-align: left;
}

.input_installment {
    border-bottom: 1px solid #d8d8d8;
    width: 9.8rem;
    text-align: right;
    color: #333;
    font-size: .85rem;
    vertical-align: middle;
}


.order_header {
    width: 100%;
    height: 2.125rem;
    line-height: 2rem;
    background: #FFFFFF;
    margin-top: .5rem;
}

.order_header>i {
    color: #91eadf;
    margin-left: 1.5rem;
    float: left;
}

.order_header>span {
    display: inline-block;
    float: left;
    margin-left: .5rem;
    color: #333333;
    font-size: .7rem;
}

.order_content>li {
    height: 2rem;
    line-height: 2rem;
}

.order_content {
}

.status {
    height: 2.5rem;
    line-height: 2.5rem;
    font-size: .85rem;
    color: #ed6e58;
    padding-left: .925rem;
    padding-right: .925rem;
}

.status>span:first-child {
    float: left;
}

.status>span:last-child {
    float: right;
}

.myOrder_info {
    background: #FFFFFF;
    margin-top: .5rem;
}

hr {
    color: #f1f1f1;
}

.view {
    height: 2.5rem;
    line-height: 2.5rem;
    padding-left: .925rem;
    padding-right: .925rem;
}

.view>a {
    display: inline-block;
    font-size: .8rem;
    background: -webkit-linear-gradient(top,#ffeb01,#fecc66);
    background: linear-gradient(to bottom,#ffeb01,#fecc66);
    /*border-radius: 50% 50%;*/
    color: #a55f5a;
}

.view>a:first-child {
    float: left;
    width: 4rem;
    text-align: center;
}

.view>a:last-child {
    float: right;
    width: 5rem;
    text-align: center;
}


.myOrder_info:last-child {
    margin-bottom: 3rem;
}

.view_repayment {
    margin-left: 1.5rem;
    width: 5rem;
    text-align: center;
}

.show {
    display: block;
}

.no_show {
    display: none;
}

.order_width {
    width: 4rem !important;
}


